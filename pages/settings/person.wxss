/* pages/settings/person.wxss */
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
  margin-top: 30px;
}

.userinfo-nickname {
  color: #aaa;
}

.item-menu {
  width: 100%;
  border: 1px solid #eee;
  height: 30px;
  margin: 10px 0;
}

.list-menu {
  padding: 0 5px;
  margin-top: 30px;
}

.item-menu text {
  font-size: 14px;
  line-height: 30px;
  color: #aaa;
  margin-left: 15px;
}
